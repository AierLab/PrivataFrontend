{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types/*",
      "../../react-app/src/@types/*"
    ],
    "baseUrl": "src/",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"]
}
