model User {
  id      Int     @id @unique @default(autoincrement())
  email   String  @unique
  name    String?
  avatar  String?
  deleted Boolean @default(false)
  posts   Post[]
}

model Post {
  id        Int     @id @unique @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Session {
  id Int @id @default(autoincrement())
}

model ChatConversation {
  chat_uid String @id @unique
  sender String
  message String
}

model FileStoreInfo {
  chat_uid String @id @unique
  file_path String
}